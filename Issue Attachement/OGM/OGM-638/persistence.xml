<?xml version="1.0"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">

	<persistence-unit name="com.abecorn.jpa"
		transaction-type="JTA">
        
		<!-- Use Hibernate OGM provider: configuration will be transparent -->
		<provider>org.hibernate.ogm.jpa.HibernateOgmPersistence</provider>
		<class>com.abecorn.model.Item</class>
		<class>com.abecorn.model.FileReference</class>
		<class>com.abecorn.model.Tag</class>
		<class>com.abecorn.model.TagReference</class>
        <exclude-unlisted-classes>true</exclude-unlisted-classes>
		<properties>
			<property name="hibernate.transaction.jta.platform"
				value="org.hibernate.service.jta.platform.internal.JBossAppServerJtaPlatform" />
			<property name="hibernate.ogm.datastore.provider" value="mongodb" />
			<property name="hibernate.ogm.datastore.database" value="itemrepository" />
			<property name="hibernate.ogm.datastore.host" value="fnb-dean-vm2" />
			<property name="hibernate.ogm.datastore.port" value="27017" />
			<property name="hibernate.ogm.datastore.username" value="" />
			<property name="hibernate.ogm.datastore.password" value="" />
		</properties>
	</persistence-unit>
</persistence>