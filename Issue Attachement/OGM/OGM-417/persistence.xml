<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">

	<persistence-unit name="angel-pu" transaction-type="JTA">
		<provider>org.hibernate.ogm.jpa.HibernateOgmPersistence</provider>
		<class>it.telecomitalia.angel.model.Contract</class>
		<class>it.telecomitalia.angel.model.Customer</class>
		<class>it.telecomitalia.angel.model.Geofence</class>
		<!-- <class>it.telecomitalia.angel.model.GsmCell</class> -->
		<!-- <class>it.telecomitalia.angel.model.GsmCells</class -->
		<class>it.telecomitalia.angel.model.Location</class>
		<class>it.telecomitalia.angel.model.Locator</class>
		<class>it.telecomitalia.angel.model.LocatorAssociation</class>
		<class>it.telecomitalia.angel.model.Sim</class>
		<class>it.telecomitalia.angel.model.TrackRaw</class>
		<properties>

			<!-- Hibernate Search -->
			<property name="hibernate.search.default.directory_provider"
				value="filesystem" />

			<property name="hibernate.search.default.indexBase" value="/Users/marco/.lucene_indexes" />

			<property name="hibernate.search.default.locking_strategy"
				value="single" />

			<property name="hibernate.query.startup_check" value="false" />

			<!-- Hibernate -->
			<property name="hibernate.transaction.jta.platform"
				value="org.hibernate.service.jta.platform.internal.JBossStandAloneJtaPlatform" />

			<!-- MongoDB -->
			<property name="hibernate.ogm.datastore.provider" value="MONGODB" />
			<property name="hibernate.ogm.datastore.grid_dialect"
				value="org.hibernate.ogm.dialect.mongodb.MongoDBDialect" />
			<property name="hibernate.ogm.mongodb.host" value="127.0.0.1" />
			<property name="hibernate.ogm.mongodb.port" value="27017" />
			<property name="hibernate.ogm.mongodb.database" value="angel" />

			<!-- JBossAS -->
			<property name="jboss.as.jpa.classtransformer" value="false" />
			<property name="jboss.as.jpa.providerModule" value="org.hibernate:ogm" />
			<!-- <property name="jboss.as.jpa.adapterModule" value="org.jboss.as.jpa.hibernate:4" 
				/> -->

		</properties>
	</persistence-unit>

</persistence>