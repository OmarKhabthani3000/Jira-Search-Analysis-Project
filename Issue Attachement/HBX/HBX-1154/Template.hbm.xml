<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
		"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
		"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.pnx.underwrite.bo.letters" default-cascade="evict,merge,lock" default-access="property" auto-import="true">
	<class name="Template" table="underwrite_letter_template" mutable="true" polymorphism="implicit" dynamic-update="false" dynamic-insert="false"
		batch-size="10" select-before-update="false" optimistic-lock="version">
		<cache usage="read-write" />
		<id name="id" type="long" access="property" unsaved-value="-1">
			<generator class="native" />
		</id>

		<property name="description" not-null="false" unique="false" update="true" insert="true" />
		<property name="name" not-null="false" unique="false" update="true" insert="true" />
		
		<property  name="code" not-null="false" unique="false" update="true" insert="true" length="1">
			<type name="org.hibernate.type.EnumType">
				<param name="enumClass">com.pnx.underwrite.bo.reference.enums.TemplateType</param>
			</type>
		</property>
		
		<property name="documentType" not-null="false" unique="false" update="true" insert="true" />
		<property name="processType" not-null="false" unique="false" update="true" insert="true" />
		<property name="workGroups" not-null="false" unique="false" update="true" insert="true" />

		<property name="agentTo" type="boolean" not-null="false" unique="false" update="true" insert="true" />
		<property name="agentCC" type="boolean" not-null="false" unique="false" update="true" insert="true" />
		<property name="collectiveTo" type="boolean" not-null="false" unique="false" update="true" insert="true" />
		<property name="collectiveCC" type="boolean" not-null="false" unique="false" update="true" insert="true" />
		<property name="holderTo" type="boolean" not-null="false" unique="false" update="true" insert="true" />
		<property name="holderCC" type="boolean" not-null="false" unique="false" update="true" insert="true" />
		<property name="mainAssuredPersonTo" type="boolean" not-null="false" unique="false" update="true" insert="true" />
		<property name="mainAssuredPersonCC" type="boolean" not-null="false" unique="false" update="true" insert="true" />
		
		
		<set name="decisions" cascade="all" table="underwrite_template_decisions" access="field" lazy="false" sort="unsorted" batch-size="10"
			outer-join="auto">
			<key foreign-key="FK_UW_LETTER_TEMPLATE_ID" column="templatePrimaryKey" />
			<element type="integer" />
		</set>
		
		<property update="false" access="property" type="timestamp" name="created">
			<column name="CREATED" sql-type="date" />
		</property>
		<property update="true" access="property" type="timestamp" name="modified">
			<column name="MODIFIED" sql-type="date" />
		</property>
		<property update="true" not-null="true" access="property" type="boolean" column="DELETED" name="deleted" />


		<set name="paragraphs" access="field" table="underwrite_para_temp"  inverse="true"  >
		<key column="template_Prm_Ref" foreign-key="uw_fk_temp"  />									
			<many-to-many class="Paragraph" column="paragraph_Prm_Ref"/>										
		</set>
		
		
	</class>
</hibernate-mapping>
