<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping
          PUBLIC "-//Hibernate/Hibernate Mapping DTD 2.0/EN"
          "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">
<hibernate-mapping>
	<class name="gov.nasa.ensemble.core.plan.RootObject" table="missionObject">
		<meta attribute="class-description">Represents an activity plan.</meta>
		<meta attribute="scope-class">public abstract</meta>
		<meta attribute="beans-property-type">bound</meta>
	
		<id name="id" type="int" column="missionObject_ID">
			<generator class="native" />
		</id>
		<joined-subclass name="gov.nasa.ensemble.core.plan.AbstractPlan">
			<meta attribute="class-description">Represents an activity plan.</meta>
			<meta attribute="scope-class">public abstract</meta>
			<meta attribute="beans-property-type">bound</meta>
	
			<key column="plan_ID"/>
	
			<property name="name" type="string" not-null="true" unique="true"/>
			
			<map name="parametersMap" cascade="all-delete-orphan">
				<key column="plan_ID" />
				<index column="name" type="string" />
				<one-to-many class="gov.nasa.ensemble.core.plan.AbstractPlanParameter" />
			</map>
				
			<joined-subclass name="gov.nasa.ensemble.core.plan.Plan" table="plan">
			    <meta attribute="scope-class">public</meta>
				<key column="plan_ID"/>
			</joined-subclass>
		</joined-subclass>
	</class>
</hibernate-mapping>
