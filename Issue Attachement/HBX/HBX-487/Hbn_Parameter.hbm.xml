<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping
          PUBLIC "-//Hibernate/Hibernate Mapping DTD 2.0/EN"
          "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">
<hibernate-mapping>

<class name="gov.nasa.ensemble.core.plan.AbstractParameter" table="Parameter" discriminator-value="H">
    <meta attribute="class-description">Represents a single argument.</meta>
	<meta attribute="class-scope">public abstract</meta>
	<meta attribute="implement-equals">true</meta>
	<meta attribute="beans-property-type">bound</meta>	
  
    <id name="id" type="int" column="parameter_ID">
        <meta attribute="use-in-equals">true</meta>
      <generator class="native" />
    </id>

    <discriminator column="discriminator" type="character"/>

	<property name="name" type="string"/>
	<property name="type" type="string"/>
	<property name="value" type="text"/>
	
	<subclass name="gov.nasa.ensemble.core.plan.Parameter" discriminator-value="S">
		
		<subclass name="gov.nasa.ensemble.core.plan.AbstractPlanParameter" discriminator-value="G">
			<many-to-one name="plan" column="plan_ID" class="gov.nasa.ensemble.core.plan.AbstractPlan">
	        	<meta attribute="beans-property-type"></meta>
				<meta attribute="scope-set"></meta>
			</many-to-one>
			<subclass name="gov.nasa.ensemble.core.plan.PlanParameter" discriminator-value="I"/>
		</subclass>
	</subclass>
</class>
  
</hibernate-mapping>
