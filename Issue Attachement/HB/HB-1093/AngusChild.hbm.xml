<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 2.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">

<hibernate-mapping>
    <class
        name="org.guidestar.uk.testing.hibernate.AngusChild"
        table="AngusChild"
        proxy="org.guidestar.uk.testing.hibernate.AngusChild"
        dynamic-update="false"
        dynamic-insert="false"
    >

        <id
            name="id"
            column="id"
            type="java.lang.Integer"
            unsaved-value="null"
        >
            <generator class="foreign">
                <param name="property">angusParent</param>
            </generator>
        </id>

        <version
            name="lastModified"
            type="java.util.Date"
            column="last_modified"
            access="property"
            unsaved-value="undefined"
        />

        <one-to-one
            name="angusParent"
            class="org.guidestar.uk.testing.hibernate.AngusParent"
            cascade="none"
            outer-join="false"
            constrained="true"
        />

        <property
            name="childNumber"
            type="java.lang.Integer"
            update="true"
            insert="true"
            access="property"
            column="childNumber"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-AngusChild.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
