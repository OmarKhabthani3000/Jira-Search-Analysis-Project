<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
   "-//Hibernate/Hibernate Mapping DTD//EN"
   "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">

<hibernate-mapping>
    <class name="hu.pmmedia.test.hibernate.Parent" table="MITGLIEDSCHAFT_SCHUTZBRIEF">
		<composite-id>
			<key-property name="instanz" column="instanz" type="string"/>
			<key-property name="beginndatum" column="beginndatum" type="calendar"/>
		</composite-id>
        <property name="vorname" type="string"/>
        <set name="children" lazy="false" cascade="all">
            <key>
				<column name="instanz" not-null="true"/>
				<column name="beginndatum" not-null="true"/>              				
            </key>
            <one-to-many class="hu.pmmedia.test.hibernate.Child"/>
        </set>        
    </class>
</hibernate-mapping>