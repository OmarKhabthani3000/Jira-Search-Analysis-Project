<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 2.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">

<hibernate-mapping>

    <class name="com.ipad.entity.AttributeValue" table="AttributeValue">

        <composite-id>
            <key-property column="attributeId" name="attributeId" type="long"/>
            <key-property column="elementId" name="elementId" type="long"/>
        </composite-id>
        <property column="possibleAttributeValueId" name="possibleAttributeValueId" not-null="true" type="long"/>
        <property column="attributeValueFreeText" length="255" name="freeText" not-null="true" type="string"/>

        <many-to-one name="attribute" class="com.ipad.entity.Attribute" column="attributeId" insert="false" update="false"/>
        <many-to-one name="element" class="com.ipad.entity.Element" column="elementId" insert="false" update="false"/>
        <many-to-one name="possibleAttributeValue" class="com.ipad.entity.PossibleAttributeValue" column="possibleAttributeValueId" insert="false" update="false"/>

    </class>

</hibernate-mapping>
