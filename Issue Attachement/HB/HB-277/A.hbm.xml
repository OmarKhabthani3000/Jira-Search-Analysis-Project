<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd" >

<hibernate-mapping>
    <class
        name="pkg.A"
        table="A"
        >
        <meta attribute="generated-class" inherit="false">pkg.AutoA</meta>
        <id
            name="id"
            type="long"
            column="ID"
            >
            <generator class="native">
                <param name="sequence">sequence_id</param>
            </generator>
        </id>
        <property
            name="cryptedPassword"
            type="pkg.BinaryBlobType"
            column="BLOB"
            length="4000"
            />
    </class>
</hibernate-mapping>
