<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 1.1//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-1.1.dtd">

<hibernate-mapping>
    <class
        name="net.sf.jexus.server.database.User"
        table="users"
    >

        <id
            name="userName"
            column="name"
            type="string"
        >
            <generator class="assigned">
            </generator>
        </id>

        <property
            name="password"
            type="string"
            column="password"
        />

        <set
	    role="roles"
            table="user_roles"
            lazy="false"
            readonly="false"
            cascade="none"
            sort="unsorted"
        >

              <key
                  column="user"
              />

              <element
                  column="role"
                  type="string"
                  not-null="false"
                  unique="false"
              />

        </set>

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-User.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
