<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping SYSTEM "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">
<hibernate-mapping>

    <class name="org.hibernate.test.SelfReferent" lazy="true" table="SELFREFERENT">
        <id name="id" unsaved-value="0">
            <generator class="increment"/>
        </id>
        <property name="name"/>
        <many-to-one name="lazy" cascade="all"/>
        <many-to-one name="eager" outer-join="true" cascade="all"/>
        <set name="group" cascade="all-delete-orphan">
            <key column="gr_id"/>
            <one-to-many class="org.hibernate.test.SelfReferent"/>
        </set>
    </class>

</hibernate-mapping>
