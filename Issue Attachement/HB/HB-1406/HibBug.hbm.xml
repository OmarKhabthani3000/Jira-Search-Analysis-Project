<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 2.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">
<hibernate-mapping default-cascade="save-update">
   <class name="Party" table="T_Party">
      <id name="id" type="int" column="id" unsaved-value="0">
         <generator class="native"/>
      </id>
      <many-to-one name="email" column="email_ref" class="Email" />
      <!-- more properties and associations ... -->
      <joined-subclass name="Person" table="T_Person">
         <key column="id" />
         <!-- more properties and associations ... -->
      </joined-subclass>
   </class>
   <class name="Email" table="T_Email" lazy="true">
      <id name="id" type="int" column="id" unsaved-value="0" >
         <generator class="native"/>
      </id>
      <property name="address" type="string"/>
      <!-- more properties ... -->
   </class>
   <class name="Client" table="T_Client" lazy="true">
      <id name="id" type="int" column="id" unsaved-value="0">
         <generator class="native"/>
      </id>
      <many-to-one name="person" column="party_ref" class="Person" 
         not-null="true"/>
      <!-- more associations ... -->
   </class>
</hibernate-mapping>