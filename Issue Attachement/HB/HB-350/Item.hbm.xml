<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd" >
    
<hibernate-mapping>

<class 
    name="pl.elysium.boxlife.hibernate.Item" 
    table="item"
>
    <id
        name="Id"
        type="long"
        column="itm_id"
    >
        <generator class="native" />
    </id>
    <property
        name="Price"
        type="double"
        column="itm_price"
        not-null="true"
        length="12"
    >
        <meta attribute="use-in-tostring">true</meta>
    </property>
    <property
        name="Addpoints"
        type="long"
        column="itm_addpoints"
        not-null="true"
        length="20"
    />
    <property
        name="IgnoreSubItemPrice"
        type="boolean"
        column="itm_ignoresubitemprice"
        not-null="true"
        length="2"
    />
    <property
        name="Name"
        type="java.lang.String"
        column="itm_name"
        not-null="true"
        length="127"
    >
        <meta attribute="use-in-tostring">true</meta>
    </property>

    <!-- bi-directional many-to-many association to Item -->
    <set name="ItemCategories" lazy="true" table="item_itemcategory_binding">
      <key column="itm_id" />
      <many-to-many class="pl.elysium.boxlife.hibernate.ItemCategory" column="itc_id"/>
    </set>

    <!-- bi-directional many-to-many association to Item -->
    <set name="ItemFolders" lazy="true" table="item_itemfolder_binding">
      <key column="itm_id" />
      <many-to-many class="pl.elysium.boxlife.hibernate.ItemFolder" column="itf_id"/>
    </set>

    <!-- bi-directional one-to-many association to OrderItem -->
    <set name="OrderItems" lazy="true" inverse="true">
        <key>
            <column name="itm_id" />
        </key>
        <one-to-many class="pl.elysium.boxlife.hibernate.OrderItem" />
    </set>


</class>
</hibernate-mapping>