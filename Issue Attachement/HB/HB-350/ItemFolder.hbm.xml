<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd" >
    
<hibernate-mapping>

<class 
    name="pl.elysium.boxlife.hibernate.ItemFolder" 
    table="itemfolder"
>
    <id
        name="Id"
        type="long"
        column="ifo_id"
    >
        <generator class="native" />
    </id>
    <property
        name="Name"
        type="java.lang.String"
        column="ifo_name"
        not-null="true"
        length="127"
    >
        <meta attribute="use-in-tostring">true</meta>
    </property>

    <!-- associations -->
    <!-- bi-directional one-to-many association to ItemFolder -->
    <set
        name="SubFolders"
        lazy="true"
        inverse="true"
    >
        <key>
            <column name="ifo_parent_id" />
        </key>
        <one-to-many 
            class="pl.elysium.boxlife.hibernate.ItemFolder"
        />
    </set>
    <!-- bi-directional many-to-one association to ItemFolder -->
    <many-to-one
        name="ParentFolder"
        class="pl.elysium.boxlife.hibernate.ItemFolder"
        not-null="true"
    >
        <column name="ifo_parent_id" />
    </many-to-one>
    <!-- bi-directional many-to-many association to Item -->
    <set name="Items" lazy="true" table="item_itemfolder_binding">
      <key column="itf_id" />
      <many-to-many class="pl.elysium.boxlife.hibernate.Item" column="itm_id"/>
    </set>


</class>
</hibernate-mapping>