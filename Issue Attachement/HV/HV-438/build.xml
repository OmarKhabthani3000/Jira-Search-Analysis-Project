    <mkdir dir="${ipgconf2.output.dir}"/>
    <javac destdir="${ipgconf2.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.ipgconf2}/javac">
