      <bootclasspath refid="ipgconf2.module.bootclasspath"/>
      <classpath refid="ipgconf2.module.production.classpath"/>
      <src refid="ipgconf2.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.ipgconf2"/>
    </javac>
    
    <copy todir="${ipgconf2.output.dir}">
      <fileset dir="${module.ipgconf2.basedir}/src/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
