<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd">

	<bean id="hibernateValidationProviderResolver" class="validator.spring.HibernateValidationProviderResolver"></bean>

	<bean id="validationBootStrap" class="javax.validation.Validation"
		factory-method="byProvider">
		<argument value="org.hibernate.validator.HibernateValidatorConfiguration"></argument>
	</bean>

	<bean id="validationBootStrapWithResolver" factory-ref="validationBootStrap"
		factory-method="providerResolver">
		<argument ref="hibernateValidationProviderResolver"></argument>
	</bean>
	<bean id="hibernateValidatorConfiguration" factory-ref="validationBootStrapWithResolver"
		factory-method="configure"></bean>


</blueprint>