<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class entity-name="A" table="A" node="A">
		<id name="id" column="ID" node="@id" type="long">
			<generator class="native"/>
		</id>
		<property name="a1" node="a1" type="string"/>
		<property name="a2" node="a2" type="string"/>
		<set name="bs" table="B" cascade="all" node="." embed-xml="true">
			<key column="A_ID"/>
			<one-to-many entity-name="B"/>
		</set>
	</class>
	<!-- -->
	<class entity-name="B" table="B">
		<id name="id" column="ID" node="@id" type="long">
			<generator class="native"/>
		</id>
		<property name="b1" node="b1" type="string"/>
		<property name="b2" node="b2" type="string"/>
	</class>
</hibernate-mapping>
