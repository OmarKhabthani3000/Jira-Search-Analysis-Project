<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
  <joined-subclass table="CAT" name="com.company.product.domain.Cat" extends="com.company.product.domain.Animal">
    <key column="ID"/>
    <property name="color" type="string">
      <column name="COLOR" />
    </property>
    <many-to-one name="owner" class="com.company.product.domain.Person"> 
      <column name="OWNER"/>
    </many-to-one> 
  </joined-subclass>
</hibernate-mapping>