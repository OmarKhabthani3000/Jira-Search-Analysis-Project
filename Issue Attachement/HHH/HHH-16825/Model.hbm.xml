<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="org.hibernate.bugs.hash">
	<class name="Bottom" table="bottom">
		<composite-id>
			<key-many-to-one name="middle" class="Middle" column="middle_id"/>
			<key-property name="type" column="type" type="java.lang.Integer"/>
		</composite-id>
		<property name="note" column="note" length="2048" not-null="false"/>
	</class>
	<class name="Middle" table="middle">
		<id name="id" column="id" type="java.lang.String">
			<generator class="org.hibernate.id.UUIDGenerator"/>
		</id>
		<many-to-one name="top" class="Top" column="top_id" not-null="true"/>
		<set name="bottoms" inverse="true" cascade="all">
            <key column="middle_id"/>
            <one-to-many class="Bottom"/>
        </set>
	</class>
	<class name="Top" table="top">
		<id name="id" column="id" type="java.lang.String">
			<generator class="org.hibernate.id.UUIDGenerator"/>
		</id>
		<property name="name" column="name"/>
		<set name="middles" inverse="true" cascade="all">
            <key column="top_id"/>
            <one-to-many class="Middle"/>
        </set>
	</class>
</hibernate-mapping>