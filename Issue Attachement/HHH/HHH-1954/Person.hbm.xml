<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
	
<hibernate-mapping 
	package="org.hibernate.test.proxyevict"
	default-access="field">
	
	<class name="Person" 
		table="person">
		
		<id name="id" 
			column="person_id">
			<generator class="native"/>
		</id>
		
		<property name="name" 
			not-null="true"
			length="80"/>
		
		<many-to-one name="friend" column="friend_id" cascade="save-update,evict"/>
		
		<many-to-one name="parent" column="parent_id" cascade="save-update,evict"/>
		
		<set name="children" inverse="true" cascade="save-update,evict">
			<key column="parent_id"/>
			<one-to-many class="Person"/>
		</set>
		
	</class>
	

</hibernate-mapping>
