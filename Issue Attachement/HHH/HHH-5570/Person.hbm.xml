<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="be.stesch.poc.core.model">

	<class name="Person">
		<id name="id">
			<generator class="native" />
		</id>

		<property name="firstName" />
		<property name="lastName" />
		<property name="nationalIdentificationNumber" />

		<component name="address" class="Address">
			<property name="street" />
			<property name="number" />
			<property name="box" />
			<property name="zipCode" />
			<property name="city" />
			<property name="country" />
		</component>

		<join table="PersonIdentification">
			<!-- 
			We are experiencing problems with property-ref which doesn't appear 
			to work. The join table is still join with the PK of the original table 
			instead of with the property indicated in the property-ref.
			See http://opensource.atlassian.com/projects/hibernate/browse/HHH-1829
			for more information.
			-->
			<key property-ref="nationalIdentificationNumber" on-delete="cascade">
				<column name="nationalIdentificationNumber" sql-type="varchar"
					length="255" />
			</key>
			<property name="dateOfBirth" />
			<property name="placeOfBirth" />
			<property name="gender" />
		</join>

	</class>

</hibernate-mapping>