<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xmlns="http://xmlns.jcp.org/xml/ns/persistence"
             xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd"
             version="2.1">
    <persistence-unit name="SensorNetwork" transaction-type="JTA">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <jta-data-source>java:jboss/datasources/SensorNetworkDS</jta-data-source>
        <class>com.tekview.transview.sensornetwork.model.Location</class>
        <class>com.tekview.transview.sensornetwork.model.Group</class>
        <class>com.tekview.transview.sensornetwork.model.Lamppost</class>
        <class>com.tekview.transview.sensornetwork.model.Slot</class>
        <class>com.tekview.transview.sensornetwork.model.PowerController</class>
        <class>com.tekview.transview.sensornetwork.model.PowerSwitch</class>
        <class>com.tekview.transview.sensornetwork.model.Camera</class>
        <class>com.tekview.transview.sensornetwork.model.Lamp</class>
        <class>com.tekview.transview.sensornetwork.model.ChargingSpot</class>
        <class>com.tekview.transview.sensornetwork.model.Fence</class>
        <class>com.tekview.transview.sensornetwork.model.LED</class>
        <class>com.tekview.transview.sensornetwork.model.WiFi</class>
        <class>com.tekview.transview.sensornetwork.model.Broadcasting</class>
        <properties>
            <!-- SPATIAL SQL dialect -->
            <property name="hibernate.dialect" value="org.hibernate.spatial.dialect.mysql.MySQL56InnoDBSpatialDialect"/>
            <property name="hibernate.dialect.storage_engine" value="innodb"/>
            <!-- JDBC connection pool (use the built-in) -->
            <!-- Enable Hibernate's automatic session context management -->
            <property name="hibernate.current_session_context_class" value="thread"/>
            <!-- Disable the second-level cache -->
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.use_sql_comments" value="true"/>
            <property name="hibernate.max_fetch_depth" value="3"/>
            <property name="hibernate.hbm2ddl.auto" value="validate"/>
        </properties>
    </persistence-unit>
</persistence>
