<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<!--
  Demonstrates the use of version based optimistic locking.
-->
<hibernate-mapping package="org.hibernate.test.optlock">
	<class name="Document" optimistic-lock="version">
		<!-- dynamic-update="true"> -->
		<id name="id">
			<generator class="native"/>
		</id>
		<version name="version" unsaved-value="null" type="integer"/>
		<property name="title"/>
		<property name="author"/>
		<property name="summary"/>
		<property name="text"/>
	</class>
</hibernate-mapping>
