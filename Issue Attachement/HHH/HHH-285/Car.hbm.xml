<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

	<!--  If we use lazy="false" it doesn't work -->
	<class name="org.hibernate.test.dom4j.Car" lazy="false" node="car">
		<id name="id" node="@id" type="long">
			<generator class="increment"/>
		</id>
		<property name="model" 
				  type="string" 
				  node="model"/>
		<many-to-one name="carType" 
			node="carType/@id"
			class="org.hibernate.test.dom4j.CarType"
			embed-xml="true"/>
	</class>
	
	<class name="org.hibernate.test.dom4j.CarType" lazy="false" node="carType">
		<id name="id" node="@id" type="long">
			<generator class="increment"/>
		</id>
		<property name="typeName" type="string" node="typeName"/>
	</class>
</hibernate-mapping>