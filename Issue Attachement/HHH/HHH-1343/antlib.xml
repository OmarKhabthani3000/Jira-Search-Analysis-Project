<?xml version="1.0"?>
<antlib>
    <!-- ant1.6+ antlib declaration for the classes
    use with the declaration xmlns:hib="antlib:org.hibernate.tool" to
    trigger ant's autoload of this file, provided the relevant jars
    are in the antlib directory, or a dir stated with -lib on the command line"
    Alternatively, load with something like

    <typedef uri="http://hibernate.org/"
        resource="/org/hibernate/tool/antlib.xml"
        classpathref="hibernate.classpath"
        xmlns:hib="http://hibernate.org/" />

    -->
    <taskdef name="schemaupdate" classname="org.hibernate.tool.hbm2ddl.SchemaUpdateTask"/>
    <taskdef name="schemaexport" classname="org.hibernate.tool.hbm2ddl.SchemaExportTask"/>
    <taskdef name="schemavalidator" classname="org.hibernate.tool.hbm2ddl.SchemaValidatorTask"/>
    <taskdef name="instrument" classname="org.hibernate.tool.instrument.InstrumentTask"/>
</antlib>
