<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.sigmaquest.gen.model.ComponentProperty"
		table="GEN_COMPONENT_PROPERTY">
		<cache usage="transactional" />
		<id name="id" column="ID" type="java.lang.Long">
			<generator class="native" />
		</id>

		<many-to-one name="componentKind" column="componentKind_id"
			access="field" lazy="no-proxy"/>
		<!-- since it is unique it does not need another index. -->
		<!-- property name="propID" unique="true" not-null="true" index="componentProperty_propId"/ -->
		<property name="propID" unique="true" not-null="true"/>
		<property name="name" not-null="true" />
		<property name="unit" />
		<property name="type" not-null="true"/>

	</class>

</hibernate-mapping>