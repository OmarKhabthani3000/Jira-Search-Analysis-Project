<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.sigmaquest.gen.model.ComponentValue"
		table="GEN_COMPONENT_VALUE">
		<cache usage="transactional" />
		<composite-id>
			<key-many-to-one name="component" column="component_id"
				access="field" />
			<key-many-to-one name="componentProperty"
				column="property_id" access="field" />
		</composite-id>

		<property name="text" column="val_text" length="2000" access="field" />
		<property name="date" column="val_date" access="field" />
		<property name="number" column="val_number" access="field" />
		<many-to-one name="componentReference" column="val_comp_ref" access="field" lazy="proxy"/>

	</class>

</hibernate-mapping>