<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.sigmaquest.gen.model.Component"
		table="GEN_COMPONENT">
		<cache usage="transactional" />
		<id name="id" column="ID" type="long">
			<generator class="native" />
		</id>

		<property name="order" column="index_number" />
		<!-- since it is unique it does not need another index. -->
		<!-- property name="serialNo" length="2000" unique="true"
			index="component_serialno" not-null="true" /-->
		<property name="serialNo" length="2000" unique="true"/>
		<property name="quantity" />
		<property name="reference" length="2000" index="component_reference"/>
		<property name="created" not-null="true" />
		<property name="modified" not-null="true" />
		<property name="deleted" />
		<many-to-one name="componentKind" column="componentKind_id"
			not-null="true" access="field" lazy="proxy"/>
		<many-to-one name="batchComponent" column="batchComponent_id"
			access="field" lazy="proxy"/>
		<many-to-one name="containerComponent"
			column="containerComponent_id" access="field" lazy="proxy"/>

		<list name="notes" lazy="true" table="GEN_COMPONENT_NOTE"
			access="field" cascade="all">
			<!-- cache usage="transactional" / -->
			<key column="component_id"/>
			<list-index base="0" column="index_number" />
			<composite-element
				class="com.sigmaquest.gen.model.Component$Note">
				<property name="name" length="1000" access="field" />
				<property name="filename" length="1000" access="field" />
				<property name="size" column="blob_size" access="field" />
				<property name="mimeType" access="field" />
				<property name="attachment" type="binary" lazy="true"
					access="field" />
				<property name="created" not-null="true" />
				<property name="modified" not-null="true" />
				<property name="reference" length="1000" access="field" />
				<property name="note" type="text" lazy="true" />
			</composite-element>
		</list>

		<bag name="history" lazy="true" 
			order-by="time_stamp" access="field" cascade="all">
			<!-- cache usage="transactional" / -->
			<key column="component_id"/>
			<one-to-many class="com.sigmaquest.gen.model.ComponentHistory" />
		</bag>
		<bag name="reverseHistory" inverse="true" lazy="true"
			order-by="time_stamp" access="field" >
			<!-- cache usage="transactional" / -->
			<key column="refComponent_id" on-delete="cascade"/>
			<one-to-many class="com.sigmaquest.gen.model.ComponentHistory" />
		</bag>
		
		<map name="values" lazy="true" access="field" inverse="true" cascade="all">
			<!-- cache usage="transactional"/ -->
			<key column="component_id" on-delete="cascade"/>
			<map-key-many-to-many
				class="com.sigmaquest.gen.model.ComponentProperty">
				<column name="property_id" />
			</map-key-many-to-many>
			<one-to-many
				class="com.sigmaquest.gen.model.ComponentValue" />
		</map>
		
		<bag name="containedComponents" lazy="true"
			inverse="true" order-by="index_number" access="field" cascade="all">
			<!--cache usage="transactional"/-->
			<key column="containerComponent_id" on-delete="cascade"/>
			<one-to-many class="com.sigmaquest.gen.model.Component" />
		</bag>
		
		<bag name="batchComponents" lazy="true"
			inverse="true" order-by="index_number" access="field" cascade="all">
			<!--cache usage="transactional"/-->
			<key column="batchComponent_id" on-delete="cascade"/>
			<one-to-many class="com.sigmaquest.gen.model.Component" />
		</bag>

	</class>

</hibernate-mapping>