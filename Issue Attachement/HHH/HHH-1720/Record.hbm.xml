<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping default-lazy="false">
    <class name="com.imsweb.seerdms.shared.entity.Record" table="RECORD" dynamic-insert="true">
        
        <id name="recordId" type="java.lang.Long" column="RECORD_ID" >
            <generator class="sequence">
                <param name="sequence">RECORD_ID_SEQ</param>
            </generator>
        </id>

	<version name="version" column="VERSION" type="java.lang.Long"/>

	<property name="nameLast" column="NAME_LAST" type="java.lang.String" length="25"/>
	<property name="nameFirst" column="NAME_FIRST" type="java.lang.String" length="14"/>
	<property name="nameMiddle" column="NAME_MIDDLE" type="java.lang.String" length="14"/>
	<property name="namePrefix" column="NAME_PREFIX" type="java.lang.String" length="3"/>
	<property name="nameSuffix" column="NAME_SUFFIX" type="java.lang.String" length="3"/>
	<property name="nameAlias" column="NAME_ALIAS" type="java.lang.String" length="20"/>

	<one-to-one name="registryRecord" cascade="all" class="com.imsweb.seerdms.shared.entity.RecordRegistry"/>

	</class>
	
</hibernate-mapping>