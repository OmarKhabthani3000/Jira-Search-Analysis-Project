<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping>

    <class name="SimpleObject"
           table="SIMPLE_OBJECT"
           lazy="false">

        <id name="_id"
            type="long"
            access="field"
            column="SIMPLE_OBJECT_ID">
            <generator class="native">
                <param name="sequence">SIMPLE_OBJECT_SEQ</param>
            </generator>
        </id>

        <property name="_name"
                  type="string"
                  access="field"
                  column="NAME"
                  not-null="true"
                  unique="true"
                  length="50"/>
      <set name="_tags"
           table="SIMPLE_OBJECT_TAG"
           lazy="false"
           access="field"
           cascade="save-update">
        <key column="SIMPLE_OBJECT_ID" not-null="true"/>
        <element type="string" column="TAG" />
      </set>
    </class>
</hibernate-mapping>
