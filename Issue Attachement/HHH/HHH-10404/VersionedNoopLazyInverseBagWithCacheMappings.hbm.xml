<!DOCTYPE hibernate-mapping PUBLIC
		"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
		"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">


<hibernate-mapping package="org.hibernate.test.collection.bag.version">

    <class name="BagOwner">
		<cache usage="read-write" include="non-lazy" />
		<id name="id" column="ID" type="int">
			<generator class="identity" />
		</id>
		<version name="rv" column="RV" type="integer" />
		<property name="name" column="NAME" />
		
        <many-to-one name="parent" class="BagOwner" cascade="none" />

        <bag name="children" inverse="true" access="noop" lazy="true">
            <key column="PARENT" />
            <one-to-many class="BagOwner" />
        </bag>
	</class>

</hibernate-mapping>