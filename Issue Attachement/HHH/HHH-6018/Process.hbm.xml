<hibernate-mapping>
  <class name="com.novell.soa.af.impl.core.ProcessImpl" table="AFPROCESS" node="AFPROCESS">
    <id name="requestId" column="REQUESTID" node="REQUESTID" type="string" length="32"/>
<!--    <version name="version" column="VERSIONNO" node="VERSIONNO" unsaved-value="negative"/> -->
    <property name="processId" column="PROCESSID" node="PROCESSID" type="string" length="255" not-null="true" update="false" />
    <property name="version" column="PROCESSVER" node="PROCESSVER" type="string" length="32" not-null="true" update="false"/>
    <property name="creationTime" column="STARTTIME" node="STARTTIME" type="timestamp" not-null="true" update="false"/>
    <property name="engineId" column="ENGINE" node="ENGINE" type="string" length="32" not-null="false" update="true"/>
    <property name="recipient" column="RECIPIENT" node="RECIPIENT" type="string" length="255" not-null="true" update="false" index="RECIPIENT_IDX"/>
    <property name="initiator" column="INITIATOR" node="INITIATOR" type="string" length="255" not-null="true" update="false" index="INITIATOR_IDX"/>
    <property name="proxy" column="PROXY" node="PROXY" type="string" length="255" not-null="false" update="false"/>
    <property name="restrictView" column="RESTRICTVIEW" node="RESTRICTVIEW" type="integer" update="false"/>
    <property name="processStatus" column="PROCESSSTATUS" node="PROCESSSTATUS" type="integer" update="true" index="STATUS_IDX"/>
    <property name="approvalStatus" column="APPROVALSTATUS" node="APPROVALSTATUS" type="integer" update="true"/>
    <property name="completionTime" column="COMPLETETIME" node="COMPLETETIME" type="timestamp"/>
    <property name="resourceType" column="RESOURCETYPE" node="RESOURCETYPE" type="string" length="32" update="true"/>
    <property name="correlationId" column="CORRELATIONID" node="CORRELATIONID" type="string" length="255" update="false" />
  </class>
</hibernate-mapping>
