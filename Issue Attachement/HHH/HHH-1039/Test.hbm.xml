<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="Customer" table="customers" node="customer">
       <id name="id" column="ID" type="java.lang.Integer">
            <generator class="native"/>
        </id>
        <property name="name" type="string"/>
        <set name="orders" inverse="true" embed-xml="false">
            <key column="customer_id"/>
            <one-to-many class="Order"/>
        </set>
    </class>
    <class name="OrderItem" table="orderitems" node="orderitem">
       <id name="id" column="ID" type="java.lang.Integer">
            <generator class="native"/>
        </id>
        <many-to-one name="customer" column="customer_id" class="Customer" node="customer"/>
        <many-to-one name="order"    column="order_id"    class="Order"/>
    </class>
    <class name="Order" table="orders" >
       <id name="id" column="ID" type="java.lang.Integer">
            <generator class="native"/>
        </id>
        <many-to-one name="client" column="customer_id" class="Customer" node="customer1"/>
        <set name="orderitems" inverse="true" embed-xml="false">
            <key column="order_id"/>
            <one-to-many class="Order"/>
        </set>
    </class>
</hibernate-mapping>