<!DOCTYPE hibernate-configuration PUBLIC
	"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
 
<hibernate-configuration>

    <!-- a SessionFactory instance listed as /jndi/name -->
    <session-factory
        name="java:hibernate/SessionFactory">

        <!-- properties -->
        <property name="cache.use_query_cache">true</property>          
        <property name="cache.use_second_level_cache">true</property>          
        <property name="cache.use_structured_entries">true</property>          
        <property name="cglib.use_reflection_optimizer">true</property>
        <property name="connection.datasource">jdbc/OracleDS1</property>
        <property name="connection.release_mode">auto</property>
        <property name="dialect">org.hibernate.dialect.Oracle9Dialect</property>
        <!-- 20 is default value for result per page in search screens -->
        <property name="default_batch_fetch_size">20</property>
        <property name="format_sql">true</property>
        <property name="max_fetch_depth">3</property>
        <property name="order_updates">true</property>
        <property name="query.substitutions">true='Y', false='N'</property>
        <property name="show_sql">false</property>
        <property name="transaction.auto_close_session">true</property>
        <property name="transaction.flush_before_completion">true</property>
		<property name="transaction.manager_lookup_class">org.hibernate.transaction.OC4JTransactionManagerLookup</property>
        <property name="transaction.factory_class">org.hibernate.transaction.CMTTransactionFactory</property>
        <property name="use_sql_comments">true</property>
        <!-- this property must be false. Otherwise lost update exception won't work. -->
        <property name="jdbc.batch_versioned_data">false</property>  
        <property name="jdbc.batch_size">30</property>  
        <property name="jdbc.use_scrollable_resultset">true</property>  
        <property name="jdbc.use_streams_for_binary">true</property>  
        
		<!-- Mapping is loaded in HbSessionFactory's static section. There is no need to put mapping files here.-->		
    </session-factory>

</hibernate-configuration>