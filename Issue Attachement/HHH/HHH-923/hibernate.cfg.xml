<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD//EN"
        "hibernate-configuration.dtd">

<hibernate-configuration>

    <session-factory>

        <!-- Database connection settings -->
        <property name="connection.driver_class">com.progress.sql.jdbc.JdbcProgressDriver</property>
        <property name="connection.url">jdbc:JdbcProgress:T:localhost:3000:testSports</property>
        <property name="connection.username">saurabh</property>
        <property name="connection.password">test1234</property>

        <!-- JDBC connection pool (use the built-in) -->
        <property name="connection.pool_size">1</property>

        <!-- SQL dialect -->
        <property name="dialect">org.hibernate.dialect.ProgressDialect</property>
	     <property name="hibernate.default_catalog"></property> 
	    <property name="hibernate.default_schema">pub</property> 
	    <!-- Echo all executed SQL to stdout -->
        <property name="show_sql">true</property>
	  <property name="hibernate.hbm2ddl.auto">create</property>
	  <mapping resource="bin.hbm.xml"/>
	  

    </session-factory>

</hibernate-configuration>