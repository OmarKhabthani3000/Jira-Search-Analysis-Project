<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="org.hibernate.test.onetoone">
	<class entity-name="Person" name="org.hibernate.test.onetoone.Person" table="ONE_TO_ONE_PERSON">
		<id name="id" type="java.math.BigDecimal">
			<column name="ID" />
		</id>
		<property name="name" type="java.lang.String">
			<column name="NAME" />
		</property>
		<bag name="address" cascade="save-update">
			<key not-null="true" property-ref="name">
				<column name="PERSON_ID"></column>
			</key>
			<one-to-many entity-name="Address" />
		</bag>
	</class>
	<class entity-name="Address" name="org.hibernate.test.onetoone.Address" table="ONE_TO_ONE_ADDRESS">
		<id name="id" type="java.math.BigDecimal">
			<column name="ID" />
		</id>
		<property name="name" type="java.lang.String">
			<column name="NAME" />
		</property>
	</class>
</hibernate-mapping>
