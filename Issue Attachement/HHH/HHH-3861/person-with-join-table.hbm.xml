<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
		"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.uwiss.hr.domain">
	<class name="Person" table="person">
		<cache usage="nonstrict-read-write"/>

		<id name="id" column="person_id">
			<generator class="sequence">
				<param name="sequence">person_seq</param>
			</generator>
		</id>

		<discriminator column="discriminator"/>

		<timestamp name="version"/>

		<property name="contactPhone"/>

		<property name="email"
		          not-null="true"
		          unique="true"/>

		<property name="memo"/>

		<property name="status"
		          type="personStatus"
		          not-null="true"/>

		<property name="firstName"
		          not-null="true"/>

		<property name="lastName"
		          not-null="true"/>

		<property name="lock"
		          type="personLock"
		          not-null="true"/>

		<one-to-one name="account"
		            class="Account"
		            fetch="join"
		            lazy="no-proxy"
		            cascade="all"/>

		<set name="projectPermissions" inverse="true">
			<cache usage="nonstrict-read-write"/>
			<key column="person_id"/>

			<one-to-many class="ProjectPermission"/>
		</set>

		<subclass name="Customer" discriminator-value="C">
			<join table="customer">
				<key column="customer_id"/>

				<many-to-one name="company"
				             class="Company"
				             column="company_id"/>
			</join>
		</subclass>

		<subclass name="Employee" discriminator-value="E">
			<join table="employee">
				<key column="employee_id"/>

				<property name="birth"
				          type="localDate"
				          not-null="true"/>

				<property name="phoneHome"
				          not-null="false"/>

				<property name="phoneMobile"
				          not-null="false"/>

				<property name="iceExternal"
				          not-null="false"/>

				<property name="iceInternal"
				          not-null="false"/>

				<many-to-one name="vacationSize"
				             column="vacation_size_id"
				             class="VacationSize"/>
			</join>
		</subclass>

	</class>

</hibernate-mapping>