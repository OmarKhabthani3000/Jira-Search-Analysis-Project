<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
  "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.hibernate.hibernate5.collectionfunction">
  
  <class name="PersonGroup">
    <id name="id" type="long">
      <generator class="native" />
    </id>
    <property name="name" type="string" not-null="true" />
    <list name="persons">
      <key foreign-key="persons_fk">
        <column name="person" />
      </key>
      <index column="sortIndex" type="integer"/>
      <composite-element class="Person">
        <property name="name" type="string" not-null="true"/>
       </composite-element>
   </list>
  </class>      

</hibernate-mapping>