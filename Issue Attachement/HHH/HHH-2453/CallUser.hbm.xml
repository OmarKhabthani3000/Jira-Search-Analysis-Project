<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "hibernate-mapping-3.0.dtd" >
<hibernate-mapping>
    
    <class
        name="com.smartitengineering.smartsipcallrouter.domain.CallUser"
        table="call_user"
        dynamic-update="false"
        dynamic-insert="false"
        >
        <id
            name="id"
            column="user_id"
            type="java.lang.Integer"
            length="11"
            >
            <generator class = "increment">          
            </generator>
        </id>		
        
        <version name = "version" column="version" />
        
        <property
        name="username"
        column="username"
        type="java.lang.String"
        length="255"
        unique="true"
        />
        
        <property
        name="realm"
        column="realm"
        type="java.lang.String"
        length="255"
        /> 
        
        <property
        name="encryptedPassword"
        column="encrypted_password"
        type="java.lang.String"
        length="255"
        /> 
        
        <property
        name="active"
        column="active"
        type="boolean"
        /> 
        
    </class>
</hibernate-mapping>