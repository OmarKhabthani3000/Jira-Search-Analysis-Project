<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE project>
<project name="BytecodeEnhancement" basedir="." default="java.enhancement">

	<property name="src" location="../src" />
	<property name="bin" location="../bin" />
	<property name="build" location="../build" />
	<property name="lib" location="../lib" />

	<path id="classes">
		<pathelement location="${bin}" />
		<pathelement location="${src}" />
	</path>
			
	<path id="class.path">
		<path refid="classes" />

		<fileset dir="${lib}">
			<include name="*.jar" />
		</fileset>
	</path>

	<target name="java.enhancement">
		<echo message="java byte code enhancement" />
		<taskdef name="enhance" classname="org.hibernate.tool.enhance.EnhancementTask" classpathref="class.path" />

		<enhance>
			<fileset dir="${bin}/org/hibernate/test">
				<include name="**/*.class" />
			</fileset>
		</enhance>
	</target>
</project>