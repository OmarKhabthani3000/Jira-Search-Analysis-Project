<?xml version="1.0" encoding="UTF-8"?>

<ehcache 	
			xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    		xsi:noNamespaceSchemaLocation="ehcache.xsd" 
    		updateCheck="true"
    		monitoring="autodetect" 
    		dynamicConfig="true">
 	
    <diskStore path="java.io.tmpdir/ehcache" />
 
  <defaultCache 
    		maxBytesLocalHeap="100M" 
			eternal="true"
  			maxBytesLocalDisk="100M" 
  			statistics="true">
 			<persistence strategy="localTempSwap" />
    </defaultCache>   
    
    <cache 
    		name="my.test.own.hibernate_xml_1_N_bidir_ehcache.Employee"
   			maxBytesLocalHeap="100M" 
			eternal="true"
  			maxBytesLocalDisk="100M" 
   	>
 			<persistence strategy="localTempSwap" />

      </cache>
      
      <cache 
      		name="my.test.own.hibernate_xml_1_N_bidir_ehcache.Address"
   			maxBytesLocalHeap="100M" 
			eternal="true"
  			maxBytesLocalDisk="100M" 
  		>
 			<persistence strategy="localTempSwap" />

      </cache>
      
      <cache 
      		name="my.test.own.hibernate_xml_1_N_bidir_ehcache.Address.employees"
   			maxBytesLocalHeap="100M" 
			eternal="true"
  			maxBytesLocalDisk="100M" 
  		>
 			<persistence strategy="localTempSwap" />

      </cache>
        
    
</ehcache>
