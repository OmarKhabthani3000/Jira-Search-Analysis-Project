<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

	<class name="Test" table="TEST" mutable="false">
	<cache usage="read-only"/>	
	<id column="ROWID" type="string">
		<generator class="native"/>
	</id>
		
	<property column="PROPA" name="propA" type="string"/>
	<property column="PROPB" name="propB" type="string" />
	
	</class>

	<query name="Test.getByPropA"><![CDATA[
		from Test t where t.propA = :propA 
	]]></query>

</hibernate-mapping> 