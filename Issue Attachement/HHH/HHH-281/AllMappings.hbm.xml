<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 2.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">

<hibernate-mapping
>
    <class
        name="somecompany.dao.PersistentEvent"
        table="event"
        dynamic-update="false"
        dynamic-insert="false"
        select-before-update="false"
    >
        <cache usage="read-write" />

        <id
            name="eventnum"
            column="eventnum"
            type="java.lang.Integer"
        >
            <generator class="somecompany.dao.SelectMaxGenerator">
                <param name="id-column">eventnum</param>
            </generator>
        </id>

        <timestamp
            name="updateTime"
            column="update_time"
        />

        <map
            name="customFields"
            table="event_custom_field"
            lazy="true"
            sort="unsorted"
            inverse="false"
            cascade="all"
            order-by="field_name"
        >
            <cache 
                usage="read-write" 
             />

              <key
                  column="eventnum"
              >
              </key>

              <index
                  column="field_name"
                  type="string"
              />

              <element
                  column="field_value"
                  type="string"
                  not-null="false"
                  unique="false"
              />

        </map>

        <property
            name="eventStartDate"
            type="java.util.Date"
            update="true"
            insert="true"
            access="property"
            column="event_start_date"
            length="23"
        />

        <property
            name="eventEndDate"
            type="java.util.Date"
            update="true"
            insert="true"
            access="property"
            column="event_end_date"
            length="23"
        />

        <property
            name="title"
            type="java.lang.String"
            update="true"
            insert="true"
            access="property"
            column="title"
            length="100"
        />


        <many-to-one
            name="eventType"
            class="somecompany.domain.EventType"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            access="property"
        >
            <column
                name="event_type" 
            />
        </many-to-one>

    </class>

    <class
        name="somecompany.domain.EventType"
        table="event_type"
        dynamic-update="false"
        dynamic-insert="false"
        select-before-update="false"
    >
        <cache usage="read-write" />

        <id
            name="eventType"
            column="event_type"
            type="java.lang.String"
        >
            <generator class="assigned">
            </generator>
        </id>

        <property
            name="description"
            type="java.lang.String"
            update="true"
            insert="true"
            access="property"
            column="event_type_desc"
            length="255"
        />

        <map
            name="fieldDefinitions"
            table="event_type_field_def"
            lazy="true"
            sort="natural"
            inverse="false"
            cascade="none"
        >
            <cache 
                usage="read-write" 
             />

              <key
                  column="event_type"
              >
              </key>

              <index
                  column="field_name"
                  type="string"
              />

              <composite-element
                  class="somecompany.domain.EventTypeFieldDef"
              >
        <property
            name="dataType"
            type="java.lang.String"
            update="true"
            insert="true"
            access="property"
            column="data_type"
            length="10"
        />


              </composite-element>

        </map>

    </class>

</hibernate-mapping>
