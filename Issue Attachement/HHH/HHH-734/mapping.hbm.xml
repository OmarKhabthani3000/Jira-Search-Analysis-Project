<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
      "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
          "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.hibernate.test.selectjoin">

    <class name="Animal" table="animal">
        <id name="animalId" column="animalId" type="integer">
            <generator class="identity"/>
        </id>
        <many-to-one name="zoo" column="zooId"/>
        <many-to-one name="zoo2" column="zoo2"/>
    </class>

    <class name="Zoo" table="zoo">
        <id name="zoo" column="zooId" type="integer">
            <generator class="identity"/>
        </id>
    </class>

</hibernate-mapping>