<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
  "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.hibernate.hibernate5.uniqueconstraint">
  
  <class name="Person">

    <id name="id" type="long">
      <generator class="native" />
    </id>
    <property name="name" type="string" not-null="true" unique-key="nameandfirstnamemustbeunique" />
    <property name="firstName" type="string" not-null="true" unique-key="nameandfirstnamemustbeunique" />
  </class>

</hibernate-mapping>