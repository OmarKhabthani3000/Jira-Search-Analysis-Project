<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
  <class table="CLAIM_DOCUMENT" name="com.cu.rbr.business.model.local.ClaimDocument" schema="rbr">
    <cache usage="read-write"/>
    <id column="ID" access="property" name="id">
      <generator class="native">
        <param name="sequence">rbrSequence</param>
        <param name="schema">rbr</param>
      </generator>
    </id>
    <version unsaved-value="null" access="property" name="version"/>
    <property name="type" not-null="true" length="64" type="string" access="property" column="TYPE"/>
    <property name="creation" not-null="false" type="timestamp" access="property" column="CREATION_DATE"/>
    <many-to-one access="property" name="claim" class="com.cu.rbr.business.model.local.Claim">
      <column name="esId" not-null="true" length="64"/>
      <column name="policyType" not-null="true" length="64"/>
    </many-to-one>
    <property name="documentNumber" not-null="false" length="64" type="string" access="property" column="NUMBER"/>
    <property name="description" not-null="false" type="com.cu.rbr.business.model.DefaultStringClobType" access="property" column="DESCRIPTION"/>
  </class>
  <query name="claimDocument.query.getDocumentListSize"><![CDATA[SELECT count(d) FROM com.cu.rbr.business.model.local.ClaimDocument AS d WHERE d.claim.id.esId = :esId AND d.claim.id.policyType = :policyType]]></query>
  <query name="claimDocument.query.countPayOfLetters"><![CDATA[SELECT count(d) FROM com.cu.rbr.business.model.local.ClaimDocument AS d WHERE d.claim.id.esId = :esId AND d.claim.id.policyType = :policyType AND type = :type]]></query>
</hibernate-mapping>
