<?xml version="1.0"?>

<mapping>
<class name="de.mq.fourier.server.document.ConfigurationImpl" identity="id" >

<description></description>
  <map-to table="Configuration" />
 <field name="id"  type="long">
 <sql name="C_ident" type="integer"/>
 </field>
 
 <field name="name"  type="string">
 <sql name="name" type="varchar"/>
 </field>
 <field name="parent"  type="long">
 <sql name="cc_ident" type="integer"/>
 </field>
 
 <field name="childs" type="de.mq.fourier.server.document.ConfigurationImpl"  collection="set" >
 <sql many-key="cc_ident" />
 </field>
 
</class>

<class name="de.mq.fourier.server.document.DocumentImpl" identity="id"  >
        
<map-to table="xdocument" />


<field name="id"  type="string">
 <sql name="rowid" type="varchar"/>
 </field>
 
 
 <field name="type"  type="string">
 <sql name="type" type="varchar"/>
 </field>
 
 <field name="document"  type="string" dirty="ignore" >
 <sql name="document" type="longvarchar"/>
 </field>
 
 <field name="configuration"  type="de.mq.fourier.server.document.ConfigurationImpl">
 <sql name="c_ident"/>
 </field>
 
 
 
 
</class>



</mapping>
 
